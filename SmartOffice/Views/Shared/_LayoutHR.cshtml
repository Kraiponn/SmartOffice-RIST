            font-weight: 400;
            line-height: 1.4;
            /*color: #212529;*/
            text-align: left;
            background-color: #ffffff;
        }

        div.ex1 {
            padding-left: 100px;
        }

        #aaa {
            /*background: linear-gradient(45deg, #1de099, #1dc8cd);
            padding: 20px 0;
            height: 72px;
            transition: all 0.5s;
            padding: 30px 0;*/
            /*height: 92px;*/
            position: fixed;
            left: 0;
            top: 0;
            right: 0;
            transition: all 0.5s;
            z-index: 997;
            color: white;
        }

            #aaa.header-fixed {
                background: linear-gradient(45deg, #1de099, #1dc8cd);
                padding: 20px 0;
                /*height: 72px;*/
                transition: all 0.5s;
            }

        /* If the screen size is 601px wide or more, set the font-size of <div> to 80px */
        @@media screen and (min-width: 1281px) {
            .responsFont {
                font-size: 0.8em
            }
        }

        /* If the screen size is 600px wide or less, set the font-size of <div> to 30px */
