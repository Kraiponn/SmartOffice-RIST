@model SmartOffice.Models.ViewModel.ViewNewsTable
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="~/digilab/images/logo.gif">
    <title>Smart Office</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">  
<link href="~/Asset/LTE/dist/css/adminlte.min.css" rel="stylesheet" />
<link href="~/lib/gallery/baguetteBox.min.css" rel="stylesheet" />
<link href="~/lib/gallery/gallery-grid.css" rel="stylesheet" />
   <link href="~/digilab/css/fontawesome-free-5.8.1-web/css/all.min.css" rel="stylesheet" />
</head>
<style>
     /* thai */
        @@font-face {
            font-family: 'Prompt';
            font-style: normal;
            font-weight: 400;
            font-display: swap;
            src: local('Prompt Regular'), local('Prompt-Regular'), url(/fonts/Prompt-Regular.ttf) format('truetype');
            unicode-range: U+0E01-0E5B, U+200C-200D, U+25CC;
        }
        /* vietnamese */
        @@font-face {
            font-family: 'Prompt';
            font-style: normal;
            font-weight: 400;
            font-display: swap;
            src: local('Prompt Regular'), local('Prompt-Regular'), url(/fonts/Prompt-Regular.ttf) format('truetype');
            unicode-range: U+0102-0103, U+0110-0111, U+1EA0-1EF9, U+20AB;
        }
        /* latin-ext */
        @@font-face {
            font-family: 'Prompt';
            font-style: normal;
            font-weight: 400;
            font-display: swap;
            src: local('Prompt Regular'), local('Prompt-Regular'), url(/fonts/Prompt-Regular.ttf) format('truetype');
            unicode-range: U+0100-024F, U+0259, U+1E00-1EFF, U+2020, U+20A0-20AB, U+20AD-20CF, U+2113, U+2C60-2C7F, U+A720-A7FF;
        }
        /* latin */
        @@font-face {
            font-family: 'Prompt';
            font-style: normal;
            font-weight: 400;
            font-display: swap;
            src: local('Prompt Regular'), local('Prompt-Regular'), url(/fonts/Prompt-Regular.ttf) format('truetype');
            unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
        }

        body {
            margin: 0;
            font-family: "Prompt",-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
            font-size: 0.82rem;
            font-weight: 400;
            line-height: 1.4;
            color: #212529;
            text-align: left;
            background-color: #ffffff;
        }
</style>
<body style="background-color:#90A4AE;">
<div class="container-fluid p-3">
	<div class="row">
        <div class="col-md-12">
            <div class="d-flex bd-highlight p-2">
                <div class="mr-auto section-title">                  
                    <h5>
                        <i class="fas fa-newspaper" style="color:#2bbbad"></i> 
                    </h5>
                </div>
            </div>
          
            <hr>
            <div class="tz-gallery">
                <div class="row">
                    @foreach (var item in Model.NnewsDetail)
                    {
                        var imgpath = "~/image/" + @item.GroupCateg + "/" + Model.NewsType + "/" + @item.Value;
                        <div class="col-xl-3 col-md-4 col-sm-6 col-xs-6">
                            <a class="lightbox" href="@Url.Content(@imgpath)">
                                <img src="@Url.Content(@imgpath)">
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
</div>
   
</div>
</body>
</html>

<script src="~/lib/gallery/baguetteBox.min.js"></script>
<script>baguetteBox.run('.tz-gallery');</script>
