<style type="text/css">


    .tag {
        /*width:350px;*/
        position: relative;
        padding: 12px 25px;
        border: solid #8B0000;
        border-width: 1px 1px 1px 0;
        border-radius: 0 12.5px 12.5px;
        background-image: linear-gradient(#FFFAFA, #FFFAFA);
        /*box-shadow: 2px 2px 1px -1px rgba(0, 0, 0, 0.2), 2px 2px 1px -1px rgba(0, 0, 0, 0.14), 2px 2px 1px -1px rgba(0, 0, 0, 0.12);*/
        transition: box-shadow 0.28s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .tag::before {
            content: "";
            position: absolute;
            border: 1px solid #8B0000;
            border-radius: 15px 0 0 0;
            background-image: linear-gradient(#FFFAFA, #FFFAFA);
            z-index: -1;
            top: 0;
            width: 55px;
            height: 55px;
            transform: translate(-51px, -1px) scale(0.70711, 0.70711) rotateZ(-45deg);
        }

        .tag::after {
            content: "";
            position: absolute;
            border: 1px solid #212121;
            border-radius: 50%;
            background: #303030;
            top: 18px;
            left: -3px;
            width: 13px;
            height: 13px;
        }

        .tag:hover {
            box-shadow: 16px 12px 6px rgba(0, 0, 0, 0.2), 12px 8px 12px rgba(0, 0, 0, 0.14), 4px 4px 4px rgba(0, 0, 0, 0.12);
        }



    .groupcard-list {
        z-index: 0;
        width: 95%;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .groupcard {
        margin: 10px auto;
        width: 100%;
        height: 120px;
        /*border-radius: 20px;*/
        /*box-shadow: 5px 5px 20px 7px rgba(0,0,0,0.25), -5px -5px 20px 7px rgba(0,0,0,0.22);*/
        cursor: pointer;
        transition: 0.4s;
        padding-left: 0px;
        padding-right: 20px
    }

        .groupcard .card_image {
            width: inherit;
            height: inherit;
            border-radius: 20px;
        }

            .groupcard .card_image img {
                width: inherit;
                height: inherit;
                border-radius: 20px;
                object-fit: cover;
                border: solid;
                border-color: #cafae2;
            }

        .groupcard .card_title {
            text-align: center;
            border-radius: 0px 0px 40px 40px;
            font-family: sans-serif;
            font-weight: bold;
            font-size: 1em;
            margin-top: -70px;
            height: 30px;
        }

        .groupcard:hover {
            transform: scale(0.9, 0.9);
            /*box-shadow: 5px 5px 30px 15px rgba(0,0,0,0.25), -5px -5px 30px 15px rgba(0,0,0,0.22);*/
        }

    .title-white {
        color: white;
    }

    .title-black {
        color: black;
    }

    @@media all and (max-width: 500px) {
        .groupcard-list {
            /* On small screens, we are no longer using row direction but column */
            flex-direction: column;
        }
    }


