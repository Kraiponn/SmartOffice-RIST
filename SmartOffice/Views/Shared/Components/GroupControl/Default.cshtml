        padding-bottom: 0;
    }

        div.bhoechie-tab-menu div.list-group {
            margin-bottom: 0;
           
        }

            div.bhoechie-tab-menu div.list-group > a {
                margin-bottom: 0;
                background-color: rgb(39,54,59);
                color:white;
            }

                div.bhoechie-tab-menu div.list-group > a .fas,
                div.bhoechie-tab-menu div.list-group > a .fa {
