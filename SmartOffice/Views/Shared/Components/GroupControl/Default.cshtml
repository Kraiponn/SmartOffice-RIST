@{
    var page = "WorkareaMain";
}



    <div class="container-fluid">
        <div class="row">
            <div class="col-12 bhoechie-tab-container">
                <div class="row">
                    <div class="col-6 bhoechie-tab-menu">
                        <div class="list-group">
                            @{
                                var num = 0;

                                var active = "";
                            }

                            @foreach (var item in Model.Select(i => new { i.DivisionCode, i.DivisionName, i.OrderNodiv }).Distinct().OrderBy(x => x.OrderNodiv))
                            {
                                @if (num == 0)
                                {
                                    active = "active";
                                }
                                else
                                {
                                    active = "";
                                }
                                <a class="list-group-item  @active" style="word-wrap: break-word;font-size:0.6em;">
                                    <i class="fas fa-chevron-circle-right fa-3x"></i> &nbsp;&nbsp;<span style="position:absolute ;font-size:1.5em;">@item.DivisionName</span>
                                </a>
                                num++;
                            }
                        </div>
                    </div>

                    <div class="col-6 bhoechie-tab">
                        @{

                            var first = true;
                            String classactive = "";
                        }
                        @foreach (var item in Model.Select(i => new { i.DivisionCode, i.DivisionName, i.OrderNodiv }).Distinct().OrderBy(x => x.OrderNodiv))
                        {
                            if (first)
                            {
                                classactive = "active";
                                first = false;
                            }
                            else
                            {
                                classactive = "";
                            }
                            <div class="bhoechie-tab-content @classactive">
                                <center>

                                    @foreach (var itemd in Model.Where(x => x.DivisionCode == @item.DivisionCode).OrderBy(x => x.OrderNo))
                                    {

                                        <!-- flight section -->

                                        <a href="@Url.Action(page, null, new { @DeptType = itemd.GroupCateg, controller = "Home" })">
                                            <div class="col-12 groupcard">
                                                <div class="card_image"> <img src="@Url.Content(@itemd.PathFile)" /> </div>
                                                <div class="card_title title-white">
                                                    <span style="background-color:#fff;color:#27363b">
                                                        @itemd.GroupName
                                                    </span>
                                                </div>
                                            </div>
                                        </a>

                                    }
                                </center>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
  
    <script type="text/javascript">
        $(document).ready(function () {
            $("div.bhoechie-tab-menu>div.list-group>a").click(function (e) {
                e.preventDefault();
                $(this).siblings('a.active').removeClass("active");
                $(this).addClass("active");
                var index = $(this).index();
                $("div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
                $("div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
            });
        });
    </script>
