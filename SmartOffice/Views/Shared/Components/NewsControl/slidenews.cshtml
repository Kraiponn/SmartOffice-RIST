<section>
    <div class="row">
        <div class="col-xl-12 col-md-12 col-sm-12 col-xs-12 p-3" >
            @{
                if (Model.News.Count(p => p.ChildType == 6) > 0)
                {
            <span class="title text-white">Information</span>
            <hr style="height:2px;border-width:0;color:white;background-color:white">
                    <div class="card">
                        @*<div class="card-header">
                            <h3 class="title"><i class="fas fa-info-circle" style="color:orange"></i>Information</h3>
                        </div>*@
                        <!-- /.card-header -->
                        <div class="card-body">
                            <ul class="products-list product-list-in-card pl-2 pr-2">
                                @foreach (var item in Model.News.Where(p => p.ChildType == 6))
                                {
                                    var linkimage = "~/image/icon-information-symbol.svg";
                                    var nohtml_detail = "";
                                    if (item.Title2 != null)
                                    {
                                        nohtml_detail = Regex.Replace(item.Title2, @"<[^>]*>", String.Empty);
                                    }
                                    if (item.NnewsDetail.Count() != 0)
                                    {
                                        if (item.NnewsDetail.FirstOrDefault().ItemType == "image")
                                        {
                                            linkimage = "~/image/" + item.GroupCateg + "/" + item.NewsType + "/" + item.NnewsDetail.FirstOrDefault().Value;
                                        }
                                    }
                                    <li class="item">
                                        <div class="product-img">
                                            <img src="@Url.Content(@linkimage)" alt="Product Image" class="img-size-50">
                                        </div>
                                        <div class="product-info">
                                            <a href='@Url.Action("Index", "News",new {DocCat = item.GroupCateg,NewsOrder=item.NewHorder})' target="_blank" class="product-title">@item.Title1</a>
                                            <span class="product-description wrapper_alert" style="font-size: 12px;">
                                                @Html.Raw(item.Title2)
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
                if (Model.News.Count(p => p.ChildType == 3) > 0)
                {

                    <span class="title text-white">Interesting link</span>
                    <hr style="height:2px;border-width:0;color:white;background-color:white">
                    @foreach (var item in Model.News.Where(p => p.ChildType == 3))
                    {
                        var linkimage = "~/image/icon-information-symbol.svg";
                        var nohtml_detail = "";
                        if (item.Title2 != null)
                        {
                            nohtml_detail = Regex.Replace(item.Title2, @"<[^>]*>", String.Empty);
                        }

                        if (item.NnewsDetail.Count() != 0)
                        {
                            linkimage = "~/image/" + item.GroupCateg + "/" + item.NewsType + "/" + item.NnewsDetail.FirstOrDefault().Value;
                        }

                        <div class="carbon-example flex-wrapper">

                            @if (item.NnewsDetail.FirstOrDefault().ItemType == "video")
                            {
                                <div class="video-frame">
                                    <video style="width:100%; height:auto;" controls>
                                        <source src="@Url.Content(@linkimage)" />
                                    </video>
                                    <div class="inner-wrapper">
                                        <span><a href=@Url.Content(@linkimage)>@item.Title1</a></span>
                                        <p class="fine-print">Go to Link</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <img src="@Url.Content(@linkimage)">
                                <div class="inner-wrapper">
                                    <span><a href=@nohtml_detail>@item.Title1</a></span>
                                    <p class="fine-print">Go to Link</p>
                                </div>
                            }
                        </div>

                    }

                }
            }
        </div>
    </div>
</section>