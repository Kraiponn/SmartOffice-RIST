                    </div>
                </div>

                <div class="col-lg-2 col-6">

                    <div class="small-box " style="background-color:rgb(75, 192, 192);color:#fff">
                        <div class="inner">
                            <h3><span id="TotalCO"></span></h3>
                            <p>Complete</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
                    </div>
                </div>

                <div class="col-lg-2 col-6">

                    <div class="small-box " style="background-color:rgb(255, 159, 64);color:#fff">
                        <div class="inner">
                            <h3><span id="TotalR"></span></h3>
                            <p>Reject</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
                    </div>
                </div>
                <div class="col-lg-2 col-6">

                    <div class="small-box " style="background-color:rgb(255, 99, 132);color:#fff">
                        <div class="inner">
                            <h3><span id="TotalC"></span></h3>
                            <p>Cancel</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        @*<a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
                    </div>
                </div>
