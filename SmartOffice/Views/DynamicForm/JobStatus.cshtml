                                <i class="fas fa-chart-bar mr-1"></i>
                                REJECT
                            </h3>

                        </div>
                        <div class="card-body">
                            <div class="tab-content p-0">


                                <canvas id="myChart_R"></canvas>

                            </div>
                        </div>
                    </div>





                </section>

                <section class="col-lg-6 connectedSortable">

                    <div class="card" style="">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-bar mr-1"></i>
                                ISSUE
                            </h3>

                        </div>
                        <div class="card-body">
                            <div class="tab-content p-0">
                                <canvas id="myChart_I"></canvas>
                            </div>
                        </div>
                    </div>

                    <div class="card" style="">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-bar mr-1"></i>
                                COMPLETE
                            </h3>

                        </div>
                        <div class="card-body">
                            <div class="tab-content p-0">
                                <canvas id="myChart_CO"></canvas>
                            </div>
                        </div>
                    </div>

                    <div class="card" style="">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-bar mr-1"></i>
                                CANCEL
                            </h3>

                        </div>
                        <div class="card-body">
                            <div class="tab-content p-0">
                                <canvas id="myChart_C"></canvas>
                            </div>
                        </div>
                    </div>


                </section>

            </div>

        </div>
    </section>

    

    <div id="modal-placeholder">
        <div class="modal bd-example-modal-xl" id="myModalData" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content pt-5">
                    <div class="modal-header bg-info">
                        <h5 class="modal-title" id="ModalHeaderLabel"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12" style="width:980px">

                                <table class="table" id="TableData"></table>
                                <div id="jqprocess"></div>
                            </div>                            
                        </div>
                    </div>
                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default"
                                data-dismiss="modal">
                            Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @using (Html.BeginForm("index", "DynamicForm", FormMethod.Post, new { @id = "toupdate", @role = "form", @target = "_blank" }))
    {
        @Html.Hidden("docno")
        @Html.Hidden("code")
        @Html.Hidden("mode")
        @Html.Hidden("seq")
    }
</div>
