
@{
    ViewData["Title"] = "EDashboard";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}

<script src="~/js/WebIntro/modernizr.js"></script>
<style>
    .Title-Page {
        padding: 15px 15px 15px 30px;
        background: #fefefe;
    }

    .Dashboard-Submanu {
        border-bottom: 1px solid #BFBFBF;
    }

    .tab-Dashboard-Submanu {
        border-right: 1px solid #BFBFBF;
    }

    .btn-Dashboard-Submanu {
        color: #000;
    }

        .btn-Dashboard-Submanu:hover {
            color: #01E87B;
        }

    .Actives {
        color: #01E87B;
    }

    .col-Catg {
        border-right: 2px solid #01E87B;
        width: 10vw;
    }

    .btn-export {
        background-color: #01E87B;
        color: #fff;
    }

        .btn-export:hover {
            background-color: #5f010a;
            color: #f0f0f0;
        }

    .body-dashboard {
        background-color: #000;
    }

    .card-chart {
        border: 1px solid #BFBFBF;
    }

    .card-chart-header {
        background-color: #0099cc;
    }

    .back-chart {
        position: relative;
        text-align: center;
        color: white;
    }

    .text-top-left {
        position: absolute;
        top: 8px;
        left: 16px;
        z-index: 99;
    }

    .bg-text-top-left {
        position: absolute;
        top: 8px;
        left: 16px;
        z-index: 97;
        background: #fff;
        opacity: 0.2;
    }
</style>
<div class="dashboard">
    <div class="container Title-Page">
        <div class="row mb-3">
            <div class="col-auto">
                <h3 class="">Hi,Welcome Back</h3>
                <span>Your web analytics dashboard template</span>
            </div>
            <div class="col">
                <div class="float-lg-right">
                    <div class="row">
                        <div class="col col-Catg">
                            <span class="p-1 text-black-50 small"><b> START DATE</b></span><br />
                            <input type="text" class="btn btn-light w-100 p-1 text-dark" value="2020/02/01" placeholder="StartTime" />
                        </div>
                        <div class="col col-Catg">
                            <span class="p-1 text-black-50 small"><b>END DATE</b></span><br />
                            <input type="text" class="btn btn-light w-100 p-1 text-dark" value="2020/02/29" placeholder="EndTime" />
                        </div>
                        <div class="col col-Catg">
                            <span class="p-1 text-black-50 small"><b>EVENT CATEGORY</b></span><br />
                            @Html.DropDownList("ddlProcess", new MultiSelectList(string.Empty, "Value", "Text"), new { @id = "ddlProcess", @class = "btn btn-light w-100 p-1 text-dark" })
                        </div>
                        <div class="col ">
                            <span class="p-1 text-black-50 small"><b>Click for search</b></span><br />
                            <button class="p-1 btn btn-block btn-export"> Export</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row Dashboard-Submanu mb-3">
            <div class="col-auto tab-Dashboard-Submanu">
                <button class="btn btn-link btn-Dashboard-Submanu  Actives  "><span class="p-1  small">Overview</span></button>
            </div>
            <div class="col-auto tab-Dashboard-Submanu">
                <button class="btn btn-link btn-Dashboard-Submanu"><span class="p-1  small">Demographics</span></button>
            </div>
            <div class="col-auto tab-Dashboard-Submanu ">
                <button class="btn btn-link btn-Dashboard-Submanu"><span class="p-1  small">More</span></button>
            </div>
            <div class="col">
                <div class="float-lg-right">
                    <div class="row">
                        <div class="col-auto tab-Dashboard-Submanu">
                            <button class="btn btn-link btn-Dashboard-Submanu"><i class="far fa-save"></i><span class="p-1  small"> Save Report</span></button>
                        </div>
                        <div class="col-auto tab-Dashboard-Submanu">
                            <button class="btn btn-link btn-Dashboard-Submanu"><i class="far fa-file-pdf"></i><span class="p-1  small"> Export to PDF</span></button>
                        </div>
                        <div class="col-auto tab-Dashboard-Submanu ">
                            <button class="btn btn-link btn-Dashboard-Submanu"><i class="far fa-envelope"></i><span class="p-1  small"> Send Mail</span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-7">
                <div class="card card-chart">
