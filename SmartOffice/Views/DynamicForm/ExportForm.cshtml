
@{
    ViewBag.Title = "ExportForm";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}
<style>
    /* Ensure that the demo table scrolls */
    th, td {
        white-space: nowrap;
    }

    div.dataTables_wrapper {
        margin: 0 auto;
    }

    div.container {
        width: 80%;
    }
</style>

<section class="content">
    <div class="container">
        <form method="post" enctype="multipart/form-data" asp-controller="DynamicForm" asp-action="ExportForm">
            <div class="row">
                <div class="col-xs-12 col-sm-12">
                    <h4 class="p-3 font-weight-bold" style="color:#006988">
                        <i class="fa fa-download"></i> Export Form
                    </h4>
                    <div class="card card-default">

                        <div class="card-body text-secondary">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="txtcode" style="color:blue">DocumentCode (เลขขึ้นต้นเอกสาร) :</label>
                                    <input type="text" id="txtcode" name="code" required="required" placeholder="XXXXX" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-12">
                                    <label style="color:red">***ถ้าระบุ From ต้องระบุ To ด้วย</label>
                                    
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtfrom">IssueDate (dd-MM-yyyy) :</label>
                                    <input type="text" id="txtfrom" name="from" placeholder="dd-MM-yyyy" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtto">To IssueDate (dd-MM-yyyy) :</label>
                                    <input type="text" id="txtto" name="to" placeholder="dd-MM-yyyy" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtfromapp">Last day of approval (dd-MM-yyyy) :</label>
                                    <input type="text" id="txtfromapp" name="fromapp" placeholder="dd-MM-yyyy" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txttoapp">To Last day of approval (dd-MM-yyyy) :</label>
                                    <input type="text" id="txttoapp" name="toapp" placeholder="dd-MM-yyyy" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtseqno">Last step of approval (ระบุเป็นตัวเลข):</label>
                                    <input type="number" id="txtfromseqno" name="fromseqno" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtseqno">To Last step of approval (ระบุเป็นตัวเลข):</label>
                                    <input type="number" id="txttoseqno" name="toseqno" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtempno">Request ID:</label>
                                    <input type="text" id="txtfromempno" name="fromempno" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtempno">To Request ID:</label>
                                    <input type="text" id="txttoempno" name="toempno" class="form-control float-right input-sm" />
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="status">Status :</label>
                                    <div class="form-control">
                                        <input class="" type="radio" id="cbstatus1" name="status" value="All" checked />
                                        <label class="">All</label>
                                        <input class="" type="radio" id="cbstatus2" name="status" value="Complete" />
                                        <label class="">Complete</label>
                                        <input class="" type="radio" id="cbstatus3" name="status" value="Process" />
                                        <label class="">Process</label>
                                        <input class="" type="radio" id="cbstatus4" name="status" value="Reject" />
                                        <label class="">Reject</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 text-center">
                                    <input type="submit" value="Export" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</section>



@section Scripts{

    <script type="text/javascript">
        $(function () {
            $("#txtfrom").datepicker({dateFormat : 'dd-mm-yy'});
            $("#txtto").datepicker({ dateFormat: 'dd-mm-yy' });
            $("#txtfromapp").datepicker({ dateFormat: 'dd-mm-yy' });
            $("#txttoapp").datepicker({ dateFormat: 'dd-mm-yy' });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
