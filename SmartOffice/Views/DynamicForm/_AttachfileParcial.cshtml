<div class="card card-danger">
    <h5 class="card-header">
        <a class="collapsed d-block" data-toggle="collapse" href="#collapse-collapsed4" aria-expanded="true" aria-controls="collapse-collapsed4" id="heading-collapsed4">
            <i class="fa fa-chevron-down pull-right"></i>
            <i class="fas fa-paperclip"></i> Attach File
        </a>
    </h5>
    <div id="collapse-collapsed4" class="collapse" aria-labelledby="heading-collapsed4">
        <div class="card-body" style="background-image: linear-gradient( 0deg,  rgba(247,247,247,1) 23.8%, rgba(252,221,221,1) 92% );">
            <form method="POST" enctype="multipart/form-data" name="addform" class="form-horizontal" id="addform">

                <div class="input-group mb-3">
                    <div class="input-group-append">
                        <span class="input-group-text">For your address.</span>
                    </div>
                    <input type="text" class="form-control" id="Addressfile">
                </div>
                <br />
                <div class="input-group" id="carduploadfile">
                    <div class="custom-file">
                        <input type="file" id="fUpload" name="fUpload" accept=".xls,.xlsx,.pdf,.gif,.jpg,.png,.doc,.docx,.ppt,.pptx,.txt" multiple class="form-control" />
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn text-white" style="background-image: radial-gradient( circle farthest-corner at 7.9% 16.1%,  rgba(245,129,90,1) 1.3%, rgba(242,80,80,1) 100.2% );" id="btnupload" value="Upload"><i class="fas fa-cloud-upload-alt"></i> Upload</button>
                    </div>
                </div>               
                <br />
                <div class="form-group" id="Group_picture">
                    <table class="table table-bordered table-hover dt-responsive display table-sm" cellspacing="0" style="width:100%" id="tablefile">
                        <thead class="thead-dark">
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>File</th>
                                <th>Add Date</th>
                                <th>Update Date</th>
                                <th>By</th>
                                <th>Computer</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>

            </form>
        </div>
    </div>
</div>
