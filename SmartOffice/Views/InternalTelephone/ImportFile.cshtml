@{
    ViewData["Title"] = "InternalTelephone";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />
    <link href="~/css/animationbgclouds.css" rel="stylesheet" />
    <style>

        .file-upload input[type='file'] {
            display: none;
        }


        body {
            /*background: #00B4DB;
                    background: -webkit-linear-gradient(to right, #0083B0, #00B4DB);
                    background: linear-gradient(to right, #0083B0, #00B4DB);
                    height: 100vh;*/
        }

        .rounded-lg {
            border-radius: 1rem;
        }

        .custom-file-label.rounded-pill {
            border-radius: 50rem;
        }

            .custom-file-label.rounded-pill::after {
                border-radius: 0 50rem 50rem 0;
            }
    </style>
</head>
<body>
    <section>
        <div class="hero">
            <div class="hero__title">
                <div class="">
                    <div class="row">
                        <div class="col-lg-5 mx-auto">
                            <div class="row text-center text-white">
                                <div class="col-lg-10 mx-auto">
                                    <h1>Upload File</h1>
                                    <h3>For Internal Telephone Number</h3>
                                </div>
                            </div>

                            <div class="p-5 bg-white shadow rounded-lg">
                                <img src="~/image/Telephone/img_upload.png" alt="" width="130" class="d-block mx-auto mb-4 rounded-pill">

                                <div class="custom-file rounded-pill mb-5">

                                    <h6 class="text-center mb-4 text-muted">
                                        .csv file
                                    </h6>

                                    <form method="post" action="@Url.Action("ImportFile", "InternalTelephone")" enctype="multipart/form-data">
                                        <input type="file" id="file" name="file" class="form-control" accept=".csv" />
                                        <p style="text-align: right; margin-top: 20px;">
                                            <input type="submit" value="Upload File" class="btn btn-xl btn-primary" />
                                        </p>
                                    </form>

                                </div>

                            </div>
                        </div>
                        <div class="col-lg-1 mx-auto">
                        </div>
                        <div class="col-lg-6 mx-auto" style="background-color:white; opacity: 0.5;filter: alpha(opacity=60); ">
                            @*<h5 class="text-white text-center mb-4">Status upload file</h5>*@
                            <h6 class="text-dark"> @Html.Raw(@ViewBag.Message)</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cube"></div>
            <div class="cube"></div>
            <div class="cube"></div>
            <div class="cube"></div>
            <div class="cube"></div>
            <div class="cube"></div>

            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>
        
    </section>
</body>
</html>


