                            <div class="form-label-group">

                                <input id="inputCPassword" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
                                <label for="inputCPassword">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button class="btn btn-lg btn-warning btn-block text-uppercase">Register <i class="fas fa-user-plus"></i></button>


                            <hr class="my-4">
                            <div class="options text-center text-md-right mt-1">
                                <p><a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary">Back <i class="fas fa-arrow-circle-left"></i></a></p>
